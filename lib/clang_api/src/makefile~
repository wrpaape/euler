IDIR    = ../include
ODIR	 = obj
LDIR 	 = ../lib
CC		  = gcc
DEBUG = -g
CFLAGS  =-Wall -c $(DEBUG) -D__USE_FIXED_PROTOTYPES__ -ansi -I$(IDIR)
LFLAGS = -Wall $(DEBUG)


_DEPS  = clang_api.h
DEPS   = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ   = clang_api.o
OBJ    = $(patsubst %,$(ODIR)/%,$(_OBJ))


$(ODIR)/%.o: $(LDIR)/%.c $(DEPS)
		$(CC) -c -o $@ $< $(CFLAGS)

prob_set: $(OBJ)
		$(CC) -o $@ $^ $(CFLAGS)

.PHONY: clean

clean:
		\rm -f $(ODIR)/*.o *~ core $(IDIR)/*~ 
