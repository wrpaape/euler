# Makefile for simple editor
JFLAGS = -g
JAVA_SRCS = JavaAPI.java \
	    Sets.java 	 \
	    Set2.java 	 \
	    Set3.java 	 \
	    Set4.java

CLASSES = $(JAVA_SRCS:.java=.class)

edit.jar : $(CLASSES)
	jar cf JavaAPI.jar -C ../classes/ $(CLASSES)

$(CLASSES): $(JAVA_SRCS)
	javac $(JFLAGS) -d ../classes/ -cp ../classes/ -sourcepath ./ $(JAVA_SRCS)
