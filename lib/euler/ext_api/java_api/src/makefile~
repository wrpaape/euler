JC = javac
JFLAGS = -g -Xlint -Xdiags:verbose
# SOURCES = JavaAPI.java Set2.java Set3.java Set4.java
CLASSES = $(wildcard *.java)
# CLASSES = $(SOURCES:.java=.class)
SRCDIR = ./
DESTDIR = ../
MAIN_JAVA_FILE_NAME = JavaAPI.java

.SUFFIXES: .java .class

.java.class:
	$(JC) $(JFLAGS) -d $(DESTDIR) -classpath $(DESTDIR) $*.java

default: classes

classes: $(CLASSES:.java=.class)

clean:
	$(RM) $(DESTDIR)*.class
